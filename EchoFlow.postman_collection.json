{
  "info": {
    "_postman_id": "6a1d0b2f-7c9b-4db4-9d14-echoflow-api",
    "name": "EchoFlow API",
    "description": "Postman collection for EchoFlow (health, readiness, transcription, post-process, combined pipeline). Select a local audio file for multipart file fields after import.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{apiBearerToken}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080",
      "type": "string"
    },
    {
      "key": "apiBearerToken",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Healthz",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/healthz",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "healthz"
          ]
        },
        "description": "Basic liveness check."
      },
      "response": []
    },
    {
      "name": "Readyz",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/readyz",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "readyz"
          ]
        },
        "description": "Readiness check. Verifies upstream /models reachability."
      },
      "response": []
    },
    {
      "name": "v1",
      "item": [
        {
          "name": "POST /v1/transcriptions",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "model",
                  "value": "whisper-large-v3",
                  "type": "text"
                },
                {
                  "key": "file",
                  "type": "file",
                  "src": ""
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/v1/transcriptions",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "v1",
                "transcriptions"
              ]
            },
            "description": "Transcribe audio via upstream OpenAI-compatible transcription API."
          },
          "response": []
        },
        {
          "name": "POST /v1/post-process",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"transcript\": \"um hey can you email alise about the deploy\",\n  \"context_summary\": \"User is replying to an email to Alice about a deployment.\",\n  \"custom_vocabulary\": \"Alice, deploy\",\n  \"custom_system_prompt\": \"\",\n  \"model\": \"\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/v1/post-process",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "v1",
                "post-process"
              ]
            },
            "description": "LLM cleanup of transcript with optional context summary and custom vocabulary."
          },
          "response": []
        },
        {
          "name": "POST /v1/pipeline/process",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "file",
                  "type": "file",
                  "src": ""
                },
                {
                  "key": "context_summary",
                  "value": "User is replying in email to Alice about a deployment.",
                  "type": "text"
                },
                {
                  "key": "custom_vocabulary",
                  "value": "Alice, staging, prod",
                  "type": "text"
                },
                {
                  "key": "custom_system_prompt",
                  "value": "",
                  "type": "text"
                },
                {
                  "key": "transcription_model",
                  "value": "whisper-large-v3",
                  "type": "text"
                },
                {
                  "key": "post_process_model",
                  "value": "meta-llama/llama-4-scout-17b-16e-instruct",
                  "type": "text"
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/v1/pipeline/process",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "v1",
                "pipeline",
                "process"
              ]
            },
            "description": "Combined pipeline: transcribe audio then post-process transcript. Falls back to raw transcript if post-processing fails."
          },
          "response": []
        }
      ]
    }
  ]
}
